{
  "name": "jetide",
  "version": "0.1.0",
  "description": "一款轻量、高性能、支持 AI 辅助的现代代码编辑器",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:vite": "vite",
    "dev:electron": "wait-on dist/main/index.js && NODE_ENV=development electron .",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:debug": "concurrently \"npm run dev:vite\" \"npm run debug:electron\"",
    "debug:electron": "wait-on http://localhost:5173 && electron . --inspect=9229",
    "debug:main": "electron . --inspect-brk=9229",
    "debug:renderer": "npm run dev:vite",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "editor",
    "ide",
    "electron",
    "react",
    "typescript",
    "ai",
    "monaco"
  ],
  "author": "JetIDE Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.jetide.app",
    "productName": "JetIDE",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
